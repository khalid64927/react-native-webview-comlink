{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es5", "es2015", "es2016", "es2017", "esnext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
